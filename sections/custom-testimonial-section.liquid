{{ 'section-testimonial-custom.css' | asset_url | stylesheet_tag }}
<div class="real-pets-section">
    <div class="real-pets-heading-block">
        <h2>{{section.settings.heading  }}</h2>
        <p>{{ section.settings.paragraph }}</p>
    </div>
    <div class="real-pets-cards-block">
      {% for block in section.blocks %}
        {% if block.settings.show_image %}
          <div class="real-pets-image-card">
           <img src={{ block.settings.image  | image_url  }} alt="" width="100" height="100">
        </div>
        {% else %}
            <div class="real-pets-text-card">
              <div class="real-pets-card-stars">
                {% for i in (1..5) -%}
                  <img src={{ 'star.png' | asset_url  }} alt="" width="29" height="29">
                {%- endfor %}
              </div>
              <p class="real-pets-card-message">{{ block.settings.message }}</p>
              <p class="real-pets-card-client-name">{{ block.settings.client-name }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
</div>



{% schema %}
  {
    "name": "Custom Testimonial",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "paragraph",
        "label": "Section Description"
      },
    ],
    "blocks": [
      {
        "type": "testimonialcard",
        "name": "card-details",
        "settings": [
          {
            "type": "text",
            "id": "client-name",
            "label": "Client Name"
          },
          {
            "type": "textarea",
            "id": "message",
            "label": "Message"
          },
          {
            "type": "checkbox",
            "id": "show_image",
            "label": "Image Card"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Testimonial",
        "blocks": [
          {
            "type": "testimonialcard"
          },
          {
            "type": "testimonialcard"
          },
          {
            "type": "testimonialcard"
          },
          {
            "type": "testimonialcard"
          }
        ]
      }
    ]
  }
{% endschema %}