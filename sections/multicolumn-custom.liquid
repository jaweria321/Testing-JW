{{ 'section-multicolumn-custom.css' | asset_url | stylesheet_tag }}

<div class="best-selling-products">
    <div class="best-selling-products-wrapper">
        <h2> {{ section.settings.heading }}</h2>
        <div class="best-selling-products-tabs-wrapper">
          <div class="product-cards">
            {% for block in section.blocks %}
              <div class="product-card">
                  <img src={{ block.settings.product.featured_image | image_url }} alt="" width="100" height="100">
                  <p class="product-type">{{  block.settings.product.type  }}</p>
                  <p class="product-title">{{  block.settings.product.title }}</p>
                  <p class="product-price">{{ block.settings.product.price }}</p>
              </div>
            {% endfor %}
          </div> 
        </div>
    </div>
</div>



{% schema %}
  {
    "name": "Multi Column Custom",
    "class": "section",
    "tag": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "card-details",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multi Column Custom",
        "blocks": [
          {
            "type": "card"
          },
          {
            "type": "card"
          },
          {
            "type": "card"
          },
          {
            "type": "card"
          }
        ]
      }
    ]
  }
{% endschema %}